# What are the most common crime categories in London?
SELECT major_category, COUNT(*) AS total_crimes
FROM `bigquery-public-data.london_crime.crime_by_lsoa`
GROUP BY major_category
ORDER BY total_crimes DESC;

major_category	total_crimes
Theft and Handling	3966300
Violence Against the Person	3171744
Criminal Damage	2069172
Drugs	1179468
Burglary	1043604
Robbery	939384
Other Notifiable Offences	776304
Fraud or Forgery	236520
Sexual Offences	108108



# What are the crime trends in London over time (2008-2016)?
SELECT year, sum(value) FROM `bigquery-public-data.london_crime.crime_by_lsoa` 
GROUP BY 1
ORDER BY 1 ASC

year	f0_
2008	738641
2009	717214
2010	715324
2011	724915
2012	737329
2013	686407
2014	680183
2015	711624
2016	736121

# Total number of crimes in London per borough
SELECT borough, count(value) FROM `bigquery-public-data.london_crime.crime_by_lsoa` 
GROUP BY borough
ORDER BY 2 DESC
LIMIT 10

